<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backimg">
    <include
        layout="@layout/toolbar">
    </include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="#25ffffff"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/headcircle"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <TextView
                    android:layout_alignBottom="@+id/center_headimg"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Wall_E"
                    android:textSize="20dp"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="近期舌苔评定"
                android:background="#60ffffff"
                android:textSize="15dp"
                android:textColor="@color/color_white"/>
            <RelativeLayout
                android:background="#25ffffff"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <TextView
                    android:id="@+id/center_hint1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="舌色:"
                    android:textSize="25dp"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_white"/>
                <TextView
                    android:id="@+id/center_result1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="绛舌"
                    android:textSize="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_white"/>
            </RelativeLayout>
            <RelativeLayout
                android:background="#25ffffff"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <TextView
                    android:id="@+id/center_hint2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="舌态:"
                    android:textSize="25dp"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_white"/>
                <TextView
                    android:id="@+id/center_result2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="歪斜"
                    android:textSize="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_white"/>
            </RelativeLayout>
            <RelativeLayout
                android:background="#25ffffff"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <TextView
                    android:id="@+id/center_hint3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="苔色:"
                    android:textSize="25dp"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_white"/>
                <TextView
                    android:id="@+id/center_result3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="白苔"
                    android:textSize="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_white"/>
            </RelativeLayout>
            <RelativeLayout
                android:background="#25ffffff"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <TextView
                    android:id="@+id/center_hint4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="其它:"
                    android:textSize="25dp"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_white"/>
                <TextView
                    android:id="@+id/center_result4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="舌苔剥落"
                    android:textSize="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_white"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="症结推测"
                android:background="#60ffffff"
                android:textSize="15dp"
                android:textColor="@color/color_white"/>
            <TextView
                android:id="@+id/center_result5"
                android:background="#25ffffff"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="胃之气阴两虚，痰湿阻络"
                android:textSize="25dp"
                android:gravity="center"
                android:textColor="@color/color_white"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="身体指标"
                android:background="#60ffffff"
                android:textSize="15dp"
                android:textColor="@color/color_white"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="诊断日历"
                android:background="#60ffffff"
                android:textSize="15dp"
                android:textColor="@color/color_white"/>
            <CalendarView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:shownWeekCount="4"
                android:background="#25ffffff">
            </CalendarView>
            <Button
                android:id="@+id/import_btn"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:text="导 入 数 据"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="50dp"
                android:textColor="#a7ccb9"
                android:textStyle="bold"
                android:background="@color/color_white"
                android:textSize="20dp"/>
        </LinearLayout>
    </ScrollView>

    
</RelativeLayout>
